@{
    ViewBag.Title = "お問い合わせ";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}
@section CSS
{
    <link href="~/Content/css/Home/Inquiry.css" rel="stylesheet" />
}
@section JS
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/Home/Inquiry.js"></script>
}

<div class="layout">
    <div class="layout-inner">

        <form method="POST" action="/Inquiry" class="inquiry-form" id="myform">
            @Html.AntiForgeryToken()
            <h1>お問い合わせ</h1>
            <h2>お名前</h2>
            <input type="text" name="Name" />
            <h2>返信先メールアドレス</h2>
            <input type="email" name="Mail" />
            <h2>内容</h2>
            <textarea name="Content"></textarea>
            <div class="submit-button-container">
                <a class="submit-inquiry">送信</a>
            </div>
        </form>
    </div>
</div>